<Page x:Class="Fooxboy.Boop.Client.WpfApp.Views.ChatView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fooxboy.Boop.Client.WpfApp.Views"
      xmlns:fluentWpf="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
      xmlns:controls="clr-namespace:Fooxboy.Boop.Client.WpfApp.Controls"
      mc:Ignorable="d" 
      Loaded="ChatView_OnLoaded"
      Background="White"
      d:DesignHeight="750" d:DesignWidth="800"
      Title="ChatView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel Margin="20 0 0 0" Orientation="Horizontal">
                <Ellipse Width="34" Height="34">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="photoUser" ImageSource="../Resources/Images/user.jpg" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock Margin="10 0 0 0" 
                           FontSize="15" FontFamily="{StaticResource GoogleSansBold}"
                           VerticalAlignment="Center" Text="{Binding Info.Title}"/>

            </StackPanel>

            <Button Background="Transparent" HorizontalAlignment="Right" Height="45" Width="45">
                <Button.Content>
                    <Image Height="20" Width="20">
                        <Image.Source>
                            <BitmapImage UriSource="../Resources/Images/more.png" DecodePixelHeight="25" DecodePixelWidth="25"/>
                        </Image.Source>
                    </Image>
                </Button.Content>
            </Button>

        </Grid>
        <Grid Grid.Row="1">
            <TextBlock x:Name="NoMessages" FontFamily="{StaticResource GoogleSansMedium}"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Visibility="{Binding NoMessages1, Mode=TwoWay}"
                       FontSize="20" 
                       Text="Сообщений пока что нет. Попробуйте написать первым!"/>

            <ListBox ScrollViewer.VerticalScrollBarVisibility="Auto"
                     HorizontalAlignment="Stretch" 
                     VerticalAlignment="Stretch"
                     ItemsSource="{Binding Messages}"
                     Focusable="False" 
                     BorderThickness="0" ScrollViewer.CanContentScroll="True" >
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel VerticalAlignment="Bottom"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <controls:MessageControl HorizontalAlignment="Stretch" Message="{Binding}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>

        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="35"/>
            </Grid.ColumnDefinitions>

            <TextBox MaxLines="1"
                     Text="{Binding TextMessage}"
                     fluentWpf:RevealElement.BorderRadius="5"
                     FontFamily="{StaticResource GoogleSansRegular}"
                     Style="{StaticResource TextBoxRevealStyle}" />

            <Button Background="Transparent" Height="35" Click="ButtonBase_OnClick" Width="35" Grid.Column="1">
                <Button.Content>
                    <Image Height="20" Width="20">
                        <Image.Source>
                            <BitmapImage UriSource="../Resources/Images/send.png" DecodePixelHeight="25" DecodePixelWidth="25"/>
                        </Image.Source>
                    </Image>
                </Button.Content>
            </Button>
        </Grid>
    </Grid>

</Page>
