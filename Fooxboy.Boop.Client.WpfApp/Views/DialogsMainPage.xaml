<Page x:Class="Fooxboy.Boop.Client.WpfApp.Views.DialogsMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fooxboy.Boop.Client.WpfApp.Views"
      mc:Ignorable="d" 
      Loaded="DialogsMainPage_OnLoaded"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Boop">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Frame Grid.Column="0" NavigationUIVisibility="Hidden" x:Name="DialogsFrame"/>
        <Frame Grid.Column="1" NavigationUIVisibility="Hidden" x:Name="ChatFrame"/>

        <StackPanel Height="50" Orientation="Horizontal" VerticalAlignment="Bottom">
            <StackPanel>
                <Image/>
                <TextBlock Text="Чаты"/>
            </StackPanel>
            <Button Height="50" Width="50"/>
            <Button Height="50" Width="50"/>
        </StackPanel>
    </Grid>
</Page>
