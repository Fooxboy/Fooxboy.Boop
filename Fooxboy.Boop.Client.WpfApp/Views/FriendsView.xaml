<Page x:Class="Fooxboy.Boop.Client.WpfApp.Views.FriendsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fooxboy.Boop.Client.WpfApp.Views"
      xmlns:fluentWpf="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="320"
      Title="FriendsView">

    <Grid>
        <StackPanel>
            <TextBlock FontFamily="{StaticResource GoogleSansMedium}"
                       Margin="0 5 0 0"
                       HorizontalAlignment="Center"
                       FontSize="15"
                       Text="Добавить друга по никнейму"/>

            <StackPanel Margin="5 5 0 0 "  Height="30" Orientation="Horizontal">
                <TextBox MaxLines="1"
                         Width="220"
                         Height="30"
                         x:Name="LoginBox"
                         Foreground="Gray"
                         MaxLength="50"
                         Text="Укажите никнейм"
                         fluentWpf:RevealElement.BorderRadius="5"
                         FontFamily="{StaticResource GoogleSansRegular}"
                         Style="{StaticResource TextBoxRevealStyle}" />

                <Button Height="30" fluentWpf:RevealElement.BorderRadius="2"
                        Width="85" Margin="5 0 5 0"
                        Style="{StaticResource ButtonRevealStyle}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Открыть" FontFamily="{StaticResource GoogleSansMedium}"/>
                            <Image Height="13" Width="13" Margin="5 1 0 0" Source="/././Resources/Images/Icons/go.png"></Image>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>

            

            


            <TextBlock FontFamily="{StaticResource GoogleSansBold}"
                       Margin="0 10 0 0"
                       HorizontalAlignment="Center"
                       FontSize="15"
                       Text="Все ваши друзья"/>

        </StackPanel>
       
    </Grid>
</Page>
