<Page
    x:Class="Fooxboy.Boop.Client.WpfApp.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Fooxboy.Boop.Client.WpfApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingsView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid>
            <StackPanel>
                <TextBlock
                    Margin="10,0,0,0"
                    FontFamily="{StaticResource GoogleSansBold}"
                    FontSize="35"
                    Text="Настройки" />

                <TextBlock
                    Margin="10,20,0,0"
                    FontFamily="{StaticResource GoogleSansMedium}"
                    FontSize="25"
                    Text="Тестирование" />

                <Grid>
                    <Button Click="ButtonBase_OnClick" Content="Загрузить аватар" />
                </Grid>
            </StackPanel>




        </Grid>
    </Grid>
</Page>
