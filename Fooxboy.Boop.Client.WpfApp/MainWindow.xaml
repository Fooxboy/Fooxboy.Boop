<fluentWpf:AcrylicWindow
    x:Class="Fooxboy.Boop.Client.WpfApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fluentWpf="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
    xmlns:local="clr-namespace:Fooxboy.Boop.Client.WpfApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Boop Messenger"
    Width="1000"
    Height="600"
    MinWidth="1000"
    MinHeight="300"
    fluentWpf:AcrylicWindow.Enabled="True"
    AcrylicWindowStyle="NoIcon"
    ExtendViewIntoTitleBar="True"
    FallbackColor="White"
    NoiseOpacity="0.05"
    TintColor="White"
    TintOpacity="0.80"
    TitleBarMode="Extend"
    mc:Ignorable="d">
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
    </Grid>
</fluentWpf:AcrylicWindow>
