<UserControl x:Class="Fooxboy.Boop.Client.WpfApp.Controls.DialogUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fooxboy.Boop.Client.WpfApp.Controls"
             mc:Ignorable="d" 
             Loaded="DialogUserControl_OnLoaded"
             d:DesignHeight="200" d:DesignWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <StackPanel Height="66" VerticalAlignment="Center" Orientation="Horizontal">
            <Grid>
                <Ellipse Width="60" Height="60">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="photoUser" ImageSource="/Controls/user.jpg" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Grid>
            <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
                <Grid VerticalAlignment="Center" Height="50">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock FontSize="15" x:Name="TitleChat" FontFamily="{StaticResource GoogleSansBold}" Grid.Row="0" VerticalAlignment="Center" Text="Имя пользователя"/>
                    <TextBlock Foreground="#dedede" x:Name="LastMessage" FontFamily="{StaticResource GoogleSansRegular}" Grid.Row="1" VerticalAlignment="Center" Text="Последнее сообщения блять нахуя"/>
                </Grid>
            </StackPanel>
        </StackPanel>
        <Grid Grid.Column="1">
            <TextBlock Foreground="#dedede" FontFamily="{StaticResource GoogleSansRegular}" VerticalAlignment="Center" Text="4:20"/>
        </Grid>
    </Grid>
</UserControl>
