<UserControl x:Class="Fooxboy.Boop.Client.WpfApp.Controls.MessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fooxboy.Boop.Client.WpfApp.Controls"
             mc:Ignorable="d" 
             Loaded="MessageControl_OnLoaded"
             d:DesignHeight="200" d:DesignWidth="500">
    <Grid Margin="0 4 0 4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid VerticalAlignment="Top">
            <Ellipse Width="50" Height="50">
                <Ellipse.Fill>
                    <ImageBrush x:Name="photoUser" ImageSource="/Controls/user.jpg" Stretch="UniformToFill"/>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Margin="5 0 0 0"  Orientation="Horizontal">
                <TextBlock x:Name="NameUser"  VerticalAlignment="Center" FontSize="16" FontFamily="{StaticResource GoogleSansBold}" Text="Имя пользователя"/>
                <TextBlock x:Name="Time" VerticalAlignment="Center" FontSize="10" FontFamily="{StaticResource GoogleSansRegular}" Margin="5 2 0 0" Foreground="#404040" Text="4:20"/>
            </StackPanel>

            <TextBlock Grid.Row="1" Margin="5 0 0 0" 
                       TextWrapping="Wrap" 
                       FontSize="14"
                       x:Name="TextMessage"
                       FontFamily="{StaticResource GoogleSansRegular}"
                       Text="Текст сообщения типа ну и такое все ну вы поняли да пидорасы!"/>
        </Grid>
    </Grid>
</UserControl>
