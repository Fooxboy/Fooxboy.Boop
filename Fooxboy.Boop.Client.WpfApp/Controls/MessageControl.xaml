<UserControl
    x:Class="Fooxboy.Boop.Client.WpfApp.Controls.MessageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Fooxboy.Boop.Client.WpfApp.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="200"
    d:DesignWidth="500"
    Loaded="MessageControl_OnLoaded"
    mc:Ignorable="d">

    <Grid x:Name="MainControlGrid">

        <Grid Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid VerticalAlignment="Top">
                <Ellipse
                    Width="50"
                    Height="50"
                    MouseEnter="UIElement_OnMouseEnter"
                    MouseLeave="UIElement_OnMouseLeave"
                    MouseLeftButtonDown="UIElement_OnMouseLeftButtonDown">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="photoUser" Stretch="UniformToFill">
                        </ImageBrush>
                    </Ellipse.Fill>

                    <Ellipse.Effect>
                        <DropShadowEffect
                            x:Name="ShadowPhoto"
                            BlurRadius="15"
                            Direction="270"
                            Opacity="0.0"
                            Color="Black" />
                    </Ellipse.Effect>
                </Ellipse>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Margin="12,0,0,0" Orientation="Horizontal">
                    <TextBlock
                        x:Name="NameUser"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource GoogleSansMedium}"
                        FontSize="15"
                        Text="Имя пользователя" />
                    <TextBlock
                        x:Name="Time"
                        Margin="5,2,0,0"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource GoogleSansRegular}"
                        FontSize="11"
                        Foreground="#404040"
                        Text="4:20" />
                </StackPanel>

                <TextBlock
                    x:Name="TextMessage"
                    Grid.Row="1"
                    Margin="13,0,0,0"
                    FontFamily="{StaticResource RobotoRegular}"
                    FontSize="14"
                    Text="Текст сообщения"
                    TextWrapping="Wrap" />
            </Grid>

        </Grid>


        <Grid.Style>
            <Style TargetType="Grid">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding ElementName=MainControlGrid, Path=IsMouseOver}" Value="True">
                        <Setter Property="Background" Value="#f5f5f5" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
    </Grid>
</UserControl>
